<div class="container text-center">
	<h1>Welcome <%=link_to current_user.name,edit_user_registration_path%> you are <%=current_user.roles.first.capitalize%></h1>
	<% if logged_in?(:admin)%>
		<%= render "dashboard/admin"%>
	<%else%>
		<%= render "dashboard/user"%>
	<%end%>
</div>
<%if logged_in?(:admin)%>
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
    Manage Admins
  </button>

  <!-- The Modal -->
  <div class="modal fade" id="myModal">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
      
        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title">Users Panel</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        
        <!-- Modal body -->
        <div class="modal-body">
	        <div class="row">
	        	<div class="col-md-6">	
	        		<h3>Users</h3>
					<%@normal_users.each do |user|%>
						<%=link_to user.name ,user_admin_path(user.id),method: :post%>
						<hr>
					<%end%>
		        </div>
	          <div class="col-md-6">
	          		<h3>Admins</h3>
	          		<%@admin_users.each do |user|%>

		          		<%=link_to user.name ,admin_user_path(user.id),method: :post%>
		          		<hr>
		          	<%end%>
	          </div>
	        </div>
        </div>
        <!-- Modal footer -->
        <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
        </div>
        
      </div>
    </div>
  </div>
 <%end%>
