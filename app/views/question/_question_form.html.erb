
  <!-- Button to Open the Modal -->
  

<!-- The Modal -->
  <div class="modal fade" id="myModal">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
      
        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title">Enter Your New Question</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        
        <!-- Modal body -->
        <div class="modal-body">
          <%=form_for question,url:'/questions' do |f|%>
            <div class="form-group">
              
              <%=f.cktext_area :name,class:"form-control"%>
            </div>
            <div class="form-group">
            <%if logged_in?(:admin)%>
            <small>On whose Behalf would you like to post this question?</small>
                <%= f.collection_select(:user_id, User.all,:id,:name,{
                  include_blank:false,
                },class:"form-control") %>
            </div>
            <%else%>
              <input type="hidden" name="question[user_id]" value="<%=current_user.id%>">
            <%end%>
            <%=f.submit "Ask",class:"btn btn-primary"%>
          <%end%>
        </div>
        
        <!-- Modal footer -->
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
        
      </div>
    </div>
  </div>
  
</div>


